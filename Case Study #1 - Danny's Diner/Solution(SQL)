    },
    {
     "data": {
      "text/html": [
       "<table>\n",
       "    <tr>\n",
       "        <th>product_name</th>\n",
       "        <th>Number_of_times_purchased</th>\n",
       "    </tr>\n",
       "    <tr>\n",
